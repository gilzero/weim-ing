{%
  set bem_block = bem_block ?: ('user-' ~ user.bundle ~ (view_mode != 'default' ? '-' ~ view_mode))|clean_class
%}
{% set wrapper_tag = wrapper_tag ?: 'article' %}
{%
  set classes = [
    bem_block,
    user.isBlocked() ? bem_block ~ '--blocked',
  ]
%}
<{{ wrapper_tag }}{{ attributes.addClass(classes) }}>
  {% block content %}
    {% if content %}
      {{- content -}}
    {% endif %}
  {% endblock %}
</{{ wrapper_tag }}>
