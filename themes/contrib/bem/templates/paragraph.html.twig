{%
  set bem_block = bem_block ?: ('paragraph-' ~ paragraph.bundle ~ (view_mode != 'default' ? '-' ~ view_mode))|clean_class
%}
{% set wrapper_tag = wrapper_tag ?: 'div' %}
{%
set classes = [
  bem_block
]
%}
<{{ wrapper_tag }}{{ attributes.addClass(classes) }}>
  {% block content %}
    {{ content }}
  {% endblock %}
</{{ wrapper_tag }}>
